set nocompatible
set encoding=utf-8

filetype off

set rtp+=~/.vim/bundle/Vundle.vim/
call vundle#rc()

Plugin 'gmarik/Vundle.vim'
Plugin 'scrooloose/syntastic'
Plugin 'bling/vim-bufferline'
Plugin 'freitass/todo.txt-vim'
Plugin 'chriskempson/base16-vim'

filetype plugin on
filetype indent on
syntax on

colorscheme base16-default

let g:syntastic_mode_map = {'mode': 'active', 'passive_filetypes': ['tex']}
let g:syntastic_python_checkers = ['flake8']
let g:syntastic_python_flake8_args = '--ignore=N801'

let g:bufferline_echo = 0
let g:bufferline_show_bufnr = 0
let g:bufferline_active_buffer_left = ''
let g:bufferline_active_buffer_right = ''
" let g:bufferline_active_highlight = 'CustomActiveTab'

autocmd VimEnter *
  \ let &statusline='%{bufferline#refresh_status()}' . '%=' . bufferline#get_status_string() . ' '
set cmdheight=2

set background=dark

" hi LineNr ctermfg=239
" hi ColorColumn ctermbg=239
" hi CursorLine cterm=None
" hi SpecialKey ctermfg=239

set hidden

set noruler
set number
set laststatus=2
set cursorline
set noshowcmd

set history=50

set wildignore=*/.git/*,*/.svn/*
set wildignore+=*.o,*.so,*.pyc
set wildmode=longest:full
set wildmenu

set shiftwidth=4
set tabstop=4
set softtabstop=4
set smarttab
set expandtab

set nowrapscan
set showmatch
set incsearch

set listchars=tab:>-
set list

set fileencodings=utf-8,cp1251,koi8-r

set backspace=indent,eol,start

set backupdir=~/.vim/backup//
set directory=~/.vim/swap//
set undodir=~/.vim/undo//
set viminfo+=n~/.vim/viminfo

set undofile
set updatetime=1000

" Habit breaking, habit making.
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>
noremap <PageUp> <NOP>
noremap <PageDown> <NOP>

inoremap <Up> <NOP>
inoremap <Down> <NOP>
inoremap <Left> <NOP>
inoremap <Right> <NOP>
inoremap <PageUp> <NOP>
inoremap <PageDown> <NOP>

noremap - <NOP>
noremap + <NOP>

" hi CustomActiveTab ctermbg=23
" hi StatusLine cterm=none ctermbg=black
" hi StatusLineNC cterm=none ctermbg=black
